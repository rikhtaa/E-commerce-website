{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.mjs",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "admin/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/backend/server.mjs" },
    { "src": "/admin/(.*)", "dest": "/admin/$1" }
  ]
}
